<?xml version="1.0" encoding="utf-8"?>


                                                           
                                                   
                                                       

    

                 
                            
                                                                                       

           

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:tag="layout/recipe_stage_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:bind="http://schemas.android.com/apk" xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/recipeImage"
                android:tag="binding_1"         
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:adjustViewBounds="true"
                android:contentDescription="Фото рецепта"
                android:scaleType="center" />

        <FrameLayout
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="16dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    app:cardCornerRadius="12dp">

                <TextView
                        android:id="@+id/stepNumber"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:tag="binding_2"         
                        android:textColor="@color/bluey_grey"
                        android:textSize="14sp"
                        tools:text="199" />

            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="15dp"
                    android:lineSpacingExtra="4sp"
                    android:tag="binding_3"         
                    android:textColor="@color/greyish_brown"
                    android:textSize="14sp"
                    tools:text="Налейте в миску белое вино и сок, добавьте кетчуп. Натрите чеснок, нарежьте чили и закиньте всё в миску" />

        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
         