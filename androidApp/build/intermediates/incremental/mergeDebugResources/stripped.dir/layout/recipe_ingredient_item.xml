    <FrameLayout  android:id="@+id/root"
                 android:orientation="horizontal"
                 android:layout_width="match_parent"
                 android:layout_height="48dp"
                 android:contentDescription="Ингредиент" android:tag="layout/recipe_ingredient_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="48dp"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/greyish_brown"
                android:textSize="14sp"
                android:tag="binding_1"          
                tools:text="Томаты в собственном соку"/>

        <TextView
                android:id="@+id/units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bluey_grey"
                android:layout_gravity="right|center_vertical"
                android:textSize="14sp"
                android:tag="binding_2"          
                tools:text="400 гр"/>
    </FrameLayout>
         